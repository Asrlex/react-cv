{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  },
  "typeRoots": ["./node_modules/@types", "./src"],
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.tsx",
    "src/api/auth/express.d.ts",
    "test/**/*",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
